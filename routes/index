var express = require('express');
var router = express.Router();
var result = require('./result-president-trump-tweets.json');

router.get('/', function(req, res, next){
    res.render('index',{});
});

router.post('/update', function(req, res, next){
    res.send({
                user:{"screen_name": "@realDonaldTrump1",
                    "profile_img": "https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg",
                    "personality": result},
                brand:{"screen_name": "@realDonaldTrump1",
                    "profile_img": "https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg",
                    "personality": result}
        });
});

module.exports = router;
