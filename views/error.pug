div(id="warning", class="modal fade", role="dialog")
	div(class="modal-dialog")
		div(class="modal-content")
			div(class="modal-header")
				button(class="close", data-dismiss="modal") &times;
				h2(class="modal-title") Whoops...
				p Have you verified every thing you filled in is valid?
			div(class="modal-body")
				div(class="form-group")
					div(class="col-md-2 col-md-2 col-xs-12") 
						button(class="btn btn-danger", id="copyError", onclick="copyToClipboard('#error');") copy
					div(class="col-md-10 col-md-10 col-xs-12")
						textarea(class="form-control", id="error", name="error", rows="20")
			div(class="modal-footer")
				a(href="mailto:TechServicesAnalytics@mx.uillinois.edu",target="_blank")
					button(class="btn btn-primary") Report the Error
				button(class="btn btn-default", data-dismiss="modal", style="margin-left:10px;") Close
				
script.
	function copyToClipboard(textID) {
		$(textID).select();
		document.execCommand('copy');
	}
	

